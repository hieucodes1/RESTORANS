@model RESTORANS.Models.Customers
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xóa tài khoản khách hàng</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="CustomersID">CustomerID</label>
            <input type="text" class="form-control mb-3" asp-for="CustomersID" disabled />
        </div>

        <div class="form-group col-md-6">
            <label asp-for="FullName">Họ tên</label>
            <input type="text" class="form-control mb-3" asp-for="FullName" disabled />
        </div>

    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CustomersID" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash-fill"></i> Xóa tài khoản
        </button>
    </form>

</main>
