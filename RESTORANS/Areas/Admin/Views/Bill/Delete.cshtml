@model RESTORANS.Models.Order;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>xác nhận hủy đơn đặt bàn</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="OrderID">OrderID</label>
            <input type="text" class="form-control mb-3" asp-for="OrderID" disabled />
        </div>
        <div class="form-group col-md-6">
            <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
            <label asp-for="CustomersID">Tên khách hàng</label>
            <select asp-for="CustomersID" class="form-control mb-3" asp-items="@(new SelectList(ViewBag.mnList, "Value","Text"))">  </select>
        </div>

    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="OrderID" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash-fill"></i> Xóa danh mục
        </button>
    </form>

</main>
