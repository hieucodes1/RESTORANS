@using RESTORANS.Utilities;
@model RESTORANS.Models.Post
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm mới thực đơn</h2>
    </div>
    <!-- Begin Form-->
    <form asp-action="Create" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="MenuID">Chọn mục</label>
                <select asp-for="MenuID" class="form-control" asp-items="@(new SelectList(ViewBag.mnlist, "Value","Text"))">
                </select>
                <span asp-validation-for="MenuID" class="alert-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Title">Title</label>
            <input type="text" class="form-control mb-3" asp-for="Title" />
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Abstract">Abstract</label>
            <input type="text" class="form-control mb-3" asp-for="Abstract" />
        </div>
         <div class="form-group col-md-12">
            <label asp-for="Images">Images</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <button class="btn btn-success" type="button" onclick="openDialog()">Choose a pic</button>
                </div>
                <input type="text" class="form-control" asp-for="Images" id="file_input" aria-describedby="button-addon2"/>
            </div>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Price">Price</label>
            <textarea class="form-control" asp-for="Price"></textarea>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Contents">Contents</label>
            <textarea class="form-control" asp-for="Contents"></textarea>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="MenuTag">MenuTag</label>
            <textarea class="form-control" asp-for="MenuTag"></textarea>
        </div>
        
        <div class="form-group col-md-6 mt-3 mb-3">
            <label>
                @Html.CheckBox("IsActive", false)
                Hiển thị
            </label>
        </div>
        <div class="form-group d-none">
            <input asp-for="CreatedDate" class="form-control" value="@function.getCurrentDate()" />
        </div>
        <div class="form-group d-none">
            <input asp-for="PostOrder" class="form-control" value="1" />
        </div>
        <div class="form-group d-none">
            <input asp-for="Category" class="form-control" value="1" />
        </div>
        <div class="form-group d-none">
            <input asp-for="Statust" class="form-control" value="1" />
        </div>
        <div class="form-group d-none">
            <input asp-for="Link" class="form-control" value="NULL" />
        </div>
        <div class="form-group d-none">
            <input asp-for="Position" class="form-control" value="3" />
        </div>
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trassh-fill"></i> Lưu lại
        </button>
    </form>
    <!-- End Form-->
</main>

@{
    var summerNote = new RESTORANS.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}