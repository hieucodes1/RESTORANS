@model RESTORANS.Models.Post
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm mới Thành viên đầu bếp</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm thành viên đầu bếp</h2>
        </div>
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="FullName">Tên đầu bếp</label>
                    <input type="text" class="form-control mb-3" asp-for="FullName" placeceholder="Nhập tên đầu bếp" />
                    <span asp-validation-for="FullName" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Abstract">Thông tin chức vụ</label>
                <input type="text" class="form-control mb-3" asp-for="Abstract" placeholder="nhập thông tin chức vụ đầu bếp" />
                <span asp-validation-for="Abstract" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Images">Images</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <button class="btn btn-success" type="button" onclick="openDialog()">Choose a pic</button>
                    </div>
                    <input type="text" class="form-control" asp-for="Images" id="file_input" aria-describedby="button-addon2" />
                </div>
            </div>
            <div class="form-group col-md-6 d-none">
                <label asp-for="Link">Facebook</label>
                <input type="text" class="form-control mb-3" asp-for="Link" placeholder="Enter LinkTW" />
                <span asp-validation-for="Link" class="alert-danger"></span>
            </div>
              <div class="form-group col-md-6 d-none">
                <label asp-for="Link">Link Twitter</label>
                <input type="text" class="form-control mb-3" asp-for="Link" placeholder="Enter LinkTW" />
                <span asp-validation-for="Link" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6 d-none">
                <label asp-for="Link">Link Instagram</label>
                <input type="text" class="form-control mb-3" asp-for="Link" placeholder="Enter LinkIT" />
                <span asp-validation-for="Link" class="alert-danger"></span>
            </div>
            <div class="form-group mb-5 mt-5">
                <label>
                    @Html.CheckBox("IsActive",false)
                    Hiển thị
                </label>
            </div>
            <div class="form-group d-none">
                <input asp-for="Statust" class="form-control" value="1" />
            </div>
            <div class="form-group d-none">
                <input asp-for="Position" class="form-control" value="5" />
            </div>
            <button type="Submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
            <a asp-controller="Member" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</div>
@{
    var summerNote = new RESTORANS.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}
