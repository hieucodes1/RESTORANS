@using RESTORANS.Utilities;
@model RESTORANS.Models.Order;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl py-5 px-0 wow fadeInUp" data-wow-delay="0.1s">
    <div class="row g-0">
        <div class="col-md-6">
            <div class="video">
                <button type="button" class="btn-play" data-bs-toggle="modal" data-src="https://www.youtube.com/embed/DWRcNpR6Kdc" data-bs-target="#videoModal">
                    <span></span>
                </button>
            </div>
        </div>
        <div class="col-md-6 bg-dark d-flex align-items-center">
            <div class="p-5 wow fadeInUp" data-wow-delay="0.2s">
                <h5 class="section-title ff-secondary text-start text-primary fw-normal">Đặt bàn</h5>
                <h1 class="text-white mb-4">Đặt bàn trực tuyến</h1>
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="row g-3">
                         <div class="form-group col-md-6 " disabled>
                            <label asp-for="CustomersID"></label>
                            <input asp-for="CustomersID" class="form-control" value="@function._UserID" />
                        </div>
                        <div class="form-group col-md-6 ">
                            <label asp-for="ArrivalDate"></label>
                            <input type="date" asp-for="ArrivalDate" class="form-control" />
                        </div>
                        
                       
                        <div class="form-group col-md-6">
                            <label asp-for="People">số người</label>
                            <select asp-for="People" class="form-select" id="People">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="2">3</option>
                                <option value="2">4</option>
                                <option value="2">nhiều hơn 4</option>
                            </select>
                        </div>
                        
                        <div class="form-group d-none">
                            <input asp-for="Statust" class="form-control" value="1" />
                        </div>
                        <div class="form-group col-md-6 mt-3 mb-3 d-none">
                            <label>
                                @Html.CheckBox("IsActive", true)
                                Hiển thị
                            </label>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                
                                <textarea asp-for="Description" class="form-control" placeholder="Yêu cầu của khách hàng" id="message" style="height: 100px"></textarea>
                                
                            </div>
                        </div>
                        <div class="col-12">
                            <button  class="btn btn-primary w-100 py-3" type="submit">Đặt ngay bây giờ</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
