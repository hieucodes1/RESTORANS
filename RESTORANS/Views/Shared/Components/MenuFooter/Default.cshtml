@using RESTORANS.Models;
@using RESTORANS.Utilities;
@model IList<Menu>


<div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="row row-small" id="row-674225234">
                <div id="col-12" class=" row col medium-5 small-12 large-5">
                    @foreach(var item in Model.Where(m=>m.Levels == 1)){
                       
                        var Pid = item.MenuID;
                        var smenu = Model.Where(m => m.ParentID == Pid).OrderBy(m => m.MenuID).ToList();
                        <div class="col-4">
                            <div class="text title_footer">
                                <h4 class="section-title ff-secondary text-start text-primary fw-normal mb-4">@item.MenuName</h4>
                            </div>
                            @if(smenu.Count != 0){
                                <div  class="text title_footer">
                                        @foreach (var smn in smenu)
                                        {
                                        string url1 = function.TitlesSlugGeneration("list", smn.MenuName, smn.MenuID);
                                        if (!string.IsNullOrEmpty(smn.Link))
                                        {
                                            url1 = smn.Link;
                                        }
                                        <a href="/@url1" class="d-flex align-items-center" style="padding: 5px 0px"><i class="@smn.Icon px-2"></i><span class="text-white">@smn.MenuName</span></a>
                                         
                                        }
                                </div>
                            }
                        </div>
                     }
                </div>
            </div>
          
        </div>
    </div>
