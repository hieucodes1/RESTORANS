@using RESTORANS.Models;
@using RESTORANS.Utilities;
@model IList<Post>
<!-- Blog Start -->
<div class="container-fluid container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class=" text-center position-relative pb-3 mb-5 mx-auto" style="max-width: 600px;">
            <h5 class="fw-bold text-primary text-uppercase">Blog</h5>
            <h1 class="mb-0">Tin tức nổi bật</h1>
        </div>
        <div class="row g-5">
            @foreach(var item in Model){
                string url = function.TitlesSlugGeneration("post", item.Title, item.PostID);
                <div class="col-lg-4 wow slideInUp" data-wow-delay="0.3s">
                    <div class="blog-item bg-light rounded overflow-hidden">
                        <div class="blog-img position-relative overflow-hidden">
                            <img class="img img-fluid" src="@item.Images" alt="">
                            @*<a class="position-absolute top-0 start-0 bg-primary text-white rounded-end mt-5 py-2 px-4" href="">@item.MenuName</a>*@
                        </div>
                        <div class="p-4">
                            <div class="d-flex mb-3">
                                <small><i class="far fa-calendar-alt text-primary me-2"></i>@item.CreatedDate</small>
                            </div>
                            <h4 class="mb-3 content-title">@item.Title</h4>
                            <p class="content-abstract">@item.Abstract</p>
                            <a class="text-uppercase" href="/@url">Đọc thêm <i class="bi bi-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Blog Start -->
