@model IList<RESTORANS.Models.ViewPostMenu>
@using RESTORANS.Utilities

<!-- Blog Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Blog list Start -->
            <div class="col-lg-7">
                <div class="row g-5">
                    @foreach (var item in Model)
                    {
                        string url = function.TitlesSlugGeneration("post", item.Title, item.PostID);
                        <div class="col-lg-5 wow slideInUp" data-wow-delay="0.3s">
                            <div class="blog-item bg-light rounded overflow-hidden">
                                <div class="blog-img-list position-relative overflow-hidden" style="width:247px; height: 177px">
                                    <img class="img-fluid img" src="@item.Images" alt="">
                                </div>
                                <div class="p-4">
                                    <h4 class="mb-3 content-title">@item.Title</h4>
                                    <p class="content-abstract">@item.Abstract</p>
                                    <a class="text-uppercase" href="/@url">Đọc thêm <i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-12 wow slideInUp" data-wow-delay="0.1s">
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-lg m-0">
                                <li class="page-item disabled">
                                    <a class="page-link rounded-0" href="#" aria-label="Previous">
                                        <span aria-hidden="true"><i class="bi bi-arrow-left"></i></span>
                                    </a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link rounded-0" href="#" aria-label="Next">
                                        <span aria-hidden="true"><i class="bi bi-arrow-right"></i></span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Blog list End -->
            <!-- Sidebar Start -->
            <div class="col-lg-5">
                <!-- Recent Post Start -->
                @await Component.InvokeAsync("RecentPost")
                <!-- Recent Post End -->
                <!-- Image Start -->
                <div class="mb-5 wow slideInUp" data-wow-delay="0.1s">
                    <img src="img/blog-1.jpg" alt="" class="img-fluid rounded">
                </div>
                <!-- Image End -->
            </div>
            <!-- Sidebar End -->
        </div>
    </div>
</div>
<!-- Blog End -->